<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
    document.write("Dzień dobry, to jest katkulator :) ");
    const operator = prompt("Podaj znak, aby wybrać działanie. ");
    const liczba1 = parseInt(prompt("Podaj liczbę pierwsza: "));
    const liczba2 = parseInt(prompt("Podaj liczbę druga: "));
    switch (operator) {
    case "+":
    const wynik1 = liczba1+liczba2;
    document.write("Twój wynik to: " + wynik1);
	break;
    case "-":
    const wynik2 = liczba1-liczba2;
    document.write("Twój wynik to: " + wynik2);
	break;
    case "*":
    const wynik3 = liczba1*liczba2;
    document.write("Twój wynik to: " + wynik3);
	break;
    case "/":
	const wynik4 = liczba1/liczba2;
    document.write("Twój wynik to: " + wynik4);
	break;
    default:
    document.write("Podałeś zły znak.");
}
    </script>
</body>
</html>
