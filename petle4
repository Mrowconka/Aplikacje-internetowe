    <head>
        <meta charset = "UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE-edge"/>
        <meta name="viewport" content="width-device-width, initial-scale=1.0" />
        <title> Document </title>
    </head>
    <body>
        <script>
        const p = parseInt(prompt("Podaj liczbę by obliczyć wartość silni: "));
        var a = 1;
        var s = 1;
        while (a <= p) s *= a++;

        document.write("Silnia z " + p + " wynosi " + s + ".");
        </script>
    </body>
</html>
