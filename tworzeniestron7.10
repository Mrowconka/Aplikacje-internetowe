#naglowek{
    border: 1px solid black;
    height: 50px;
    background-color: blanchedalmond;
}
#jeden{
    border: 1px solid black;
    margin-top: 10px;
    height:  100px;
    background-color: bisque;
}
#menu{
    border: 1px solid black;
    text-align: center;
    margin-top: 10px;
    background-color: pink;
    height: 180px;
}
ol{
    font-size: 19px;
    list-style-type: none;
    display: inline-block;
}
ol a{
    color:rgb(107, 106, 106);
    text-decoration: none;
    display: block;
}
ol > li{
    border-left: 1px solid black;
    float: left;
    height: 40px;
    width: 160px;
}
ol > li:last-child{
    border-right: 1px solid black;
    
}
ol > li:hover{
    background-color: palevioletred;
}
ol > li:hover > a{
    color: purple;
}
ol > li >ul{
    list-style-type: none;
    height: 40px;
    display: none;
}
ol > li:hover > ul{
    display: block;
}
ol > li > ul > li{
    background-color: plum;
    border-top: 1px solid gray;
    position: relative;
    z-index: 100;
}
ol > li > ul > li:hover{
    background-color: rgb(182, 37, 85);
}
